@import './../public.styl'
.alertBox
  width: 500px
  .title
    height: 50px
    padding: 0 20px
    font-size: 16px
    line-height: 50px
    letter-spacing: 2px
    box-sizing: border-box
    background-color: $cNavtopClear
    color: #fff
  .box
    padding: 20px 30px
    box-sizing: border-box
    padding-top: 40px
    background-color #fff
    >div
      margin-bottom 30px
      display: flex
      flex-flow: row nowrap
      align-items: flex-start
      label
        padding-top: 5px
      >span
        padding-top: 5px
        flex: 1
        text-align: right 
        font-size: 14px
        color: #777
        letter-spacing: 1px
      div
        flex: 4
        div
          width: 100%
        input 
          width: 100%
        textarea
          min-height: 90px !important
    .btns
      display: flex 
      flex-flow: row nowrap
      align-items: center
      justify-content: center
